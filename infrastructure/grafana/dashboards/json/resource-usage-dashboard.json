{
  "dashboard": {
    "title": "资源使用监控 (CPU、内存、网络)",
    "tags": ["resources", "cpu", "memory", "network"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "CPU 使用率",
        "type": "graph",
        "gridPos": {"h": 10, "w": 24, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "process_cpu_usage",
            "legendFormat": "{{job}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "percentunit", "label": "CPU Usage", "min": 0, "max": 1},
          {"format": "short"}
        ],
        "legend": {"show": true, "alignAsTable": true, "avg": true, "max": true, "current": true, "values": true},
        "alert": {
          "conditions": [
            {
              "evaluator": {"params": [0.8], "type": "gt"},
              "operator": {"type": "and"},
              "query": {"params": ["A", "5m", "now"]},
              "reducer": {"params": [], "type": "avg"},
              "type": "query"
            }
          ],
          "executionErrorState": "alerting",
          "frequency": "1m",
          "handler": 1,
          "name": "High CPU Usage",
          "noDataState": "no_data"
        }
      },
      {
        "id": 2,
        "title": "JVM 内存使用",
        "type": "graph",
        "gridPos": {"h": 10, "w": 12, "x": 0, "y": 10},
        "targets": [
          {
            "expr": "jvm_memory_used_bytes{area=\"heap\"}",
            "legendFormat": "{{job}} - Heap Used",
            "refId": "A"
          },
          {
            "expr": "jvm_memory_max_bytes{area=\"heap\"}",
            "legendFormat": "{{job}} - Heap Max",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "bytes", "label": "Memory"},
          {"format": "short"}
        ],
        "legend": {"show": true, "alignAsTable": true, "avg": true, "max": true, "current": true, "values": true}
      },
      {
        "id": 3,
        "title": "JVM 内存使用率",
        "type": "graph",
        "gridPos": {"h": 10, "w": 12, "x": 12, "y": 10},
        "targets": [
          {
            "expr": "jvm_memory_used_bytes{area=\"heap\"} / jvm_memory_max_bytes{area=\"heap\"}",
            "legendFormat": "{{job}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "percentunit", "label": "Memory Usage", "min": 0, "max": 1},
          {"format": "short"}
        ],
        "legend": {"show": true, "alignAsTable": true, "avg": true, "max": true, "current": true, "values": true},
        "alert": {
          "conditions": [
            {
              "evaluator": {"params": [0.9], "type": "gt"},
              "operator": {"type": "and"},
              "query": {"params": ["A", "5m", "now"]},
              "reducer": {"params": [], "type": "avg"},
              "type": "query"
            }
          ],
          "executionErrorState": "alerting",
          "frequency": "1m",
          "handler": 1,
          "name": "High Memory Usage",
          "noDataState": "no_data"
        }
      },
      {
        "id": 4,
        "title": "GC 暂停时间",
        "type": "graph",
        "gridPos": {"h": 10, "w": 12, "x": 0, "y": 20},
        "targets": [
          {
            "expr": "rate(jvm_gc_pause_seconds_sum[5m])",
            "legendFormat": "{{job}} - {{action}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "s", "label": "GC Pause Time"},
          {"format": "short"}
        ],
        "legend": {"show": true, "alignAsTable": true, "avg": true, "max": true, "current": true, "values": true}
      },
      {
        "id": 5,
        "title": "GC 次数",
        "type": "graph",
        "gridPos": {"h": 10, "w": 12, "x": 12, "y": 20},
        "targets": [
          {
            "expr": "rate(jvm_gc_pause_seconds_count[5m])",
            "legendFormat": "{{job}} - {{action}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "ops", "label": "GC Count"},
          {"format": "short"}
        ],
        "legend": {"show": true, "alignAsTable": true, "avg": true, "max": true, "current": true, "values": true}
      },
      {
        "id": 6,
        "title": "线程数",
        "type": "graph",
        "gridPos": {"h": 10, "w": 12, "x": 0, "y": 30},
        "targets": [
          {
            "expr": "jvm_threads_live",
            "legendFormat": "{{job}} - Live",
            "refId": "A"
          },
          {
            "expr": "jvm_threads_daemon",
            "legendFormat": "{{job}} - Daemon",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Thread Count"},
          {"format": "short"}
        ],
        "legend": {"show": true, "alignAsTable": true, "avg": true, "max": true, "current": true, "values": true}
      },
      {
        "id": 7,
        "title": "数据库连接池状态",
        "type": "graph",
        "gridPos": {"h": 10, "w": 12, "x": 12, "y": 30},
        "targets": [
          {
            "expr": "hikaricp_connections_active",
            "legendFormat": "{{job}} - Active",
            "refId": "A"
          },
          {
            "expr": "hikaricp_connections_idle",
            "legendFormat": "{{job}} - Idle",
            "refId": "B"
          },
          {
            "expr": "hikaricp_connections_pending",
            "legendFormat": "{{job}} - Pending",
            "refId": "C"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Connections"},
          {"format": "short"}
        ],
        "legend": {"show": true, "alignAsTable": true, "avg": true, "max": true, "current": true, "values": true}
      },
      {
        "id": 8,
        "title": "Python 进程内存使用",
        "type": "graph",
        "gridPos": {"h": 10, "w": 12, "x": 0, "y": 40},
        "targets": [
          {
            "expr": "process_resident_memory_bytes{type=\"python\"}",
            "legendFormat": "{{job}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "bytes", "label": "Memory"},
          {"format": "short"}
        ],
        "legend": {"show": true, "alignAsTable": true, "avg": true, "max": true, "current": true, "values": true}
      },
      {
        "id": 9,
        "title": "Python 进程打开文件数",
        "type": "graph",
        "gridPos": {"h": 10, "w": 12, "x": 12, "y": 40},
        "targets": [
          {
            "expr": "process_open_fds{type=\"python\"}",
            "legendFormat": "{{job}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Open FDs"},
          {"format": "short"}
        ],
        "legend": {"show": true, "alignAsTable": true, "avg": true, "max": true, "current": true, "values": true}
      }
    ]
  }
}
