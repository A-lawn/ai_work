# 服务配置
SERVICE_NAME=rag-query-service
SERVICE_PORT=9002
SERVICE_HOST=0.0.0.0

# Nacos 配置
NACOS_SERVER=localhost:8848
NACOS_NAMESPACE=rag-system
NACOS_GROUP=DEFAULT_GROUP

# ChromaDB 配置
CHROMA_HOST=localhost
CHROMA_PORT=8000
CHROMA_COLLECTION_NAME=ops_knowledge_base

# Redis 配置
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=3600

# 检索配置
TOP_K=5
SIMILARITY_THRESHOLD=0.7

# Embedding Service 配置
EMBEDDING_SERVICE_NAME=embedding-service
# EMBEDDING_SERVICE_URL=http://localhost:9003  # 可选：直接指定 URL

# LLM Service 配置
LLM_SERVICE_NAME=llm-service
# LLM_SERVICE_URL=http://localhost:9004  # 可选：直接指定 URL

# 提示词配置
PROMPT_TEMPLATE=你是一个专业的运维助手。请基于以下上下文回答用户的问题。\n\n上下文信息：\n{context}\n\n用户问题：{question}\n\n请提供准确、详细的答案。如果上下文中没有相关信息，请明确说明。

# Zipkin 配置
ZIPKIN_ENDPOINT=http://localhost:9411/api/v2/spans

# Prometheus 配置
ENABLE_METRICS=true

# 超时配置
EMBEDDING_TIMEOUT=30
LLM_TIMEOUT=60
